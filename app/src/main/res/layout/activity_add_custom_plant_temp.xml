<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_addCustomPlantTemp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addPlantsTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Custom Plant Presets"
            android:textColor="#000000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/input_plantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_edit_note_24"
            android:ems="10"
            android:hint="Plant Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/input_sunlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_light_mode_24"
            android:ems="10"
            android:hint="Sunlight Per Day"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/input_humid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_water_drop_24"
            android:ems="10"
            android:hint="Soil Humid"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/input_temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_device_thermostat_24"
            android:ems="10"
            android:hint="Temperature"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/input_ph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_scale_24"
            android:ems="10"
            android:hint="Soil PH"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b_preset_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:onClick="submit"
                android:text="Confirm" />

            <Button
                android:id="@+id/b_preset_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="0"
                android:onClick="cancel"
                android:text="Cancel" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>